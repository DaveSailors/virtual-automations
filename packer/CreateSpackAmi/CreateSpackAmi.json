{
  "builders": [
    {
      "access_key": "{{user `aws_access_key`}}",
      "ami_name": "JenkinsBuild {{timestamp}}",
      "instance_type": "t2.micro",
      "region": "us-west-1",
      "secret_key": "{{user `aws_secret_key`}}",
      "source_ami": "ami-3a674d5a",
      "ssh_pty": "true",
      "ssh_username": "ec2-user",
      "type": "amazon-ebs"
    }
  ],
  "post-processors": [],
  "provisioners": [
    {
      "inline": [
        "echo ********************************",
        "echo ******- - Script starting",
        "echo ******- - starting yum update",
        "echo ****----------------------------",
        "sudo yum -y update",
        "echo ********************************",
        "echo ********************************",
        "echo ******- - update complete",
        "echo ****----------------------------",
        "sudo yum -y install git.x86_64",
        "echo ********************************",
        "echo ********************************",
        "echo ******- - git installed trying git help",
        "echo ****----------------------------",
        "git --help",
        "echo ********************************",
        "echo ********************************",
        "echo ******- - create spack user",
        "echo ****----------------------------",
        "sudo useradd spack",
        "echo ********************************",
        "echo ********************************",
        "echo ******- - test userid",
        "echo ****----------------------------",
        "sudo su spack -c 'id'",
        "sudo su spack -c 'cd;pwd'",
        "echo ********************************",
        "echo ********************************",
        "echo ******- - test userid",
        "echo ****----------------------------",
        "id",
        "echo ********************************",
        "echo ********************************",
        "echo ******- - git installed trying clone",
        "echo ****----------------------------",
        "sudo su spack -c 'cd;git clone https://github.com/LLNL/spack.git'",
        "echo ********************************",
        "echo ********************************",
        "echo ******- - testing spack",
        "echo ****----------------------------",
        "id",
        "echo ********************************",
        "echo ********************************",
        "echo ******- - Script done",
        "echo ********************************",
        "echo ********************************"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  }
}

